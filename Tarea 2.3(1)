import numpy as np
import matplotlib.pyplot as plt

# Función original
def f(x):
    return x**3 - 6*x**2 + 11*x - 6

# Interpolación de Lagrange
def lagrange_interpolation(x, x_points, y_points):
    n = len(x_points)
    result = 0
    for i in range(n):
        term = y_points[i]
        for j in range(n):
            if i != j:
                term *= (x - x_points[j]) / (x_points[i] - x_points[j])
        result += term
    return result

# Método de bisección
def bisect(func, a, b, tol=1e-6, max_iter=100):
    if func(a) * func(b) > 0:
        raise ValueError("El intervalo no contiene una raíz")
    for _ in range(max_iter):
        c = (a + b) / 2
        if abs(func(c)) < tol or (b - a)/2 < tol:
            return c
        if func(a) * func(c) < 0:
            b = c
        else:
            a = c
    return (a+b)/2

# Puntos de interpolación
x_points = np.array([1.0, 2.0, 3.0])
y_points = f(x_points)

# Polinomio interpolante
x_vals = np.linspace(1, 3, 200)
y_interp = [lagrange_interpolation(x, x_points, y_points) for x in x_vals]

# Raíz aproximada
root = bisect(lambda x: lagrange_interpolation(x, x_points, y_points), 1, 3)

# Gráfica
plt.figure(figsize=(8,6))
plt.plot(x_vals, f(x_vals), '--b', label="f(x)")
plt.plot(x_vals, y_interp, 'r', label="Interpolante de Lagrange")
plt.axhline(0, color='black', linestyle='--')
plt.axvline(root, color='green', linestyle='dotted', label=f"Raíz: {root:.4f}")
plt.scatter(x_points, y_points, color='black', label="Puntos")
plt.legend(); plt.grid(); plt.title("Ejercicio 1 - Interpolación")
plt.show()

print(f"Raíz aproximada Ejercicio 1: {root:.6f}")
